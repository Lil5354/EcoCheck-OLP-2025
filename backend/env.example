# EcoCheck Backend - Environment Variables Example
# Copy this file to .env and update with your actual values
# Note: This file is named 'env.example' (without dot) to avoid .gitignore

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://ecocheck_user:ecocheck_pass@localhost:5432/ecocheck
DB_HOST=localhost
DB_PORT=5432
DB_USER=ecocheck_user
DB_PASSWORD=ecocheck_pass
DB_NAME=ecocheck

# ============================================
# Server Configuration
# ============================================
PORT=3000
BACKEND_PORT=3000
NODE_ENV=development

# ============================================
# FIWARE Orion-LD Configuration
# ============================================
ORION_LD_URL=http://localhost:1026
FIWARE_SERVICE=ecocheck
FIWARE_SERVICE_PATH=/hcm

# ============================================
# External API Keys (Optional)
# ============================================
OPENWEATHER_API_KEY=your_openweather_api_key_here
AIRQUALITY_API_KEY=your_openaq_api_key_here

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Security Configuration
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
JWT_SECRET=your_jwt_secret_here

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
DEBUG=false
LOG_REQUESTS=true


# EcoCheck Frontend Web Manager - Environment Variables Example
# Copy this file to .env and update with your actual values
# Note: This file is named 'env.example' (without dot) to avoid .gitignore

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:3000

# ============================================
# WebSocket Configuration
# ============================================
VITE_WS_URL=ws://localhost:3000

# ============================================
# Map Configuration
# ============================================
VITE_MAP_STYLE=https://demotiles.maplibre.org/style.json

# ============================================
# Feature Flags (Optional)
# ============================================
VITE_ENABLE_WEATHER=true
VITE_ENABLE_AIR_QUALITY=true
VITE_ENABLE_POI=true

# ============================================
# Development Options
# ============================================
VITE_DEBUG=false
VITE_ENABLE_DEVTOOLS=true

